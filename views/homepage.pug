html 
    head 
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body    
        h1 My Pets
        p Add/Update #[a(href=`${addUrl}`) here]



        table(style='width:100%', border='1')
            tr
                th Name
                th Favorite Toy
                th Type

            .cards 
            each contact in data
                .card 
                tr
                        td #{contact.properties.name}
                        td #{contact.properties.favoritetoy}
                        td #{contact.properties.type}


