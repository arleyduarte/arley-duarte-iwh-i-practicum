html 
    head 
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body    
        h1 My Pets
        p Add/Update #[a(href=`${addUrl}`) here]
        .cards 
            each contact in data
                .card 
                    h2.card__name #{contact.properties.name} #{contact.properties.type}
                    p.card__email #{contact.properties.favoritetoy}


        table(style='width:100%', border='1')
